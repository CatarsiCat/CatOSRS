<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.catarsi.catosrs.presentation.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_home_to_itemsFragment"
            app:destination="@id/itemsFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_old"
        android:name="com.catarsi.catosrs.presentation.old.OldFragment"
        android:label="@string/menu_old"
        tools:layout="@layout/fragment_old" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.catarsi.catosrs.presentation.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/itemsFragment"
        android:name="com.catarsi.catosrs.presentation.home.items.ItemsFragment"
        android:label="ItemsFragment"
        tools:layout="@layout/items_fragment">
        <argument
            android:name="category"
            app:argType="com.catarsi.catosrs.domain.entity.CategoryEntity" />
    </fragment>
</navigation>